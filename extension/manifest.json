{
  "manifest_version": 3,
  "name": "Mochi Chat",
  "version": "1.0",
  "description": "Chat with your PDFs and websites using AI",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "declarativeNetRequest",
    "webNavigation",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "commands": {
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle Mochi Chat"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": ["content.js", "marked.min.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "pdf.worker.mjs",
        "instructions.html",
        "instructions.js",
        "extract-text.js",
        "chat.js",
        "conversation.js",
        "styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
