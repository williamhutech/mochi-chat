{
  "manifest_version": 3,
  "name": "Mochi Chat",
  "version": "1.2",
  "description": "Chat with your PDFs and websites using AI",
  "author": "Team Mochi",
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },
  "permissions": [
    "activeTab",
    "commands"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "extension-popup.html"
  },
  "commands": {
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle Mochi Chat"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": [
        "content.js", 
        "marked.min.js",
        "katex.min.js"
      ],
      "css": ["styles.css", "katex.min.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "pdf.worker.mjs",
        "instructions.html",
        "instructions.js",
        "extract-text.js",
        "chat.js",
        "cmaps/*",
        "conversation.js",
        "styles.css",
        "marked.min.js",
        "dynamic-apps.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
