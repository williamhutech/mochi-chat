{
  "manifest_version": 3,
  "name": "Mochi Chat",
  "version": "1.0",
  "description": "Chat with your PDFs and websites using AI",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "webNavigation",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/",
    "file:///*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {},
  "commands": {
    "toggle-chat": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Toggle Mochi Chat"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "file:///*"
      ],
      "js": ["marked.min.js", "purify.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.mjs",
        "pdf.worker.mjs",
        "instructions.html",
        "styles.css"
      ],
      "matches": ["<all_urls>", "file:///*"]
    }
  ]
}
