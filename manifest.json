{
  "manifest_version": 3,
  "name": "PDF Text Extractor",
  "version": "1.0",
  "description": "Extract text from PDF files and display it in a UI component",
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeNetRequest",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pdf.mjs", "pdf.worker.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
